{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('images/{{ background }}')">{{ title }}</section>
<h2>{{ title }} Confira!</h2>
{{/banner}}

<div class="container list">

    {{#list}}
    <div class="item">
        <img src="images/{{image}}" class="item--image" />
        <div class="item--name">{{name}}</div>
        <div class="item--color"><strong>Cor:</strong>{{color}}</div>
        <div class="item--genre"><strong>Descrição:</strong><br> {{description}}</div>
        <div class="item--genre"><strong>Valor:</strong><strong>{{price}}</strong></div>
    </div>
    {{/list}}
    
</div>

{{^list}}
    <div class="container no-list">
        <h2>Não há Itens nessas condições</h2>
    </div>
{{/list}}

<a id="button-zap" href="https://wa.link/yyijew"><img src="https://i.imgur.com/ryESuZ5.png" style="height:80px; position:fixed; bottom:30px; right:30px; z-index:99999;" data-selector="img"></a>

{{>partials/footer}}