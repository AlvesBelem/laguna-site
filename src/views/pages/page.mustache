{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('images/{{ background }}')">{{ title }}</section>
<h2>{{ title }} Teste de Texto</h2>
{{/banner}}

<div class="container list">

    {{#list}}
    <div class="item">
        <img src="images/{{image}}" class="item--image" />
        <div class="item--name">{{name}}</div>
        <div class="item--color">Cor: {{color}}</div>
        <div class="item--genre">Descrição: {{description}}</div>
        <div class="item--genre">Valor: <strong>{{price}}</strong></div>
    </div>
    {{/list}}
    
</div>

{{^list}}
    <div class="container no-list">
        <h2>Não há Itens nessas condições</h2>
    </div>
{{/list}}

{{>partials/footer}}